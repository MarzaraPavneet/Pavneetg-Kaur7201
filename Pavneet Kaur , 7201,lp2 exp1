#include <iostream>
using namespace std;

int main() {
    int valid_count = 0;
    int number;

    while(true) {
        cout << "Enter the number" << endl;
        cin >> number;

        if(number % 8 == 0) {
            valid_count++;
        } else {
            break;
        }
    }

    cout << "Total " << valid_count << " numbers are valid numbers." << endl;
    return 0;
}
